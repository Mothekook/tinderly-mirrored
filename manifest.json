{
  "name": "Tinder Plugin",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created to make Tinder easier :)",
  "homepage_url": "http://theweiweiwu.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Tinder Plugin",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": ["http://*/", "storage", "activeTab", "tabs", "https://*/"],
  "content_scripts": [
    {
      "matches": ["https://tinder.com/*"],
      "js": ["src/inject/inject.js", "js/jquery-3.2.1.min.js"]
    }
  ]
}
